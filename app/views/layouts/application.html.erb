<!DOCTYPE html>
<html>
<head>
  <title>Diary</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
  <header>
    <nav class="top-bar" data-top-bar>
      <ul class="dropdown menu top-bar-left" data-dropdown-menu>
        <li class="menu-text">Diary</li>
        <li><%= link_to "Pages", pages_path %></li>
        <li class="has-dropdown">
          <%= link_to "New Page", new_page_path %>
        </li>
      </ul>
      <ul class="menu top-bar-right">
        <li class="menu-text"><%= login_status %></li>
        <li><%= login_button %></li>
      </ul>
    </nav>
  </header>

  <h1>Flash[:experiment] "<%= flash[:experiment] %>"</h1>

  <main class="row">
    <%= yield %>
  </main>

</body>
</html>
