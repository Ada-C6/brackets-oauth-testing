<section>
  <h1><%= @page.title %></h1>
  <h3>Diary entry from <%= render_date(@page.created_at) %></h3>
  <p><%= @page.content %></p>
</section>
<section class="row">
  <%= link_to "Page Index", pages_path, class: "button small-3 large-2 columns" %>
  <%= link_to "Edit This Page", edit_page_path(@page), class: "button small-3 large-2 columns" %>
  <!-- TODO DPR: if upvote comes before link, it still renders after.
        Not sure why, probably something to do with the fact that the
        button is nested inside a form. -->
  <%= delete_link @page, "small-3 large-2 columns" %>
  <%= upvote_link @page, "small-3 large-2 columns end" %>
</section>
